<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"

    android:layout_gravity="center_horizontal"
    tools:context=".MainActivity"
    >


<LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView

            style="@style/HeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/Q1" />
        <TextView
            style="@style/QuestionStyle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="@string/question1" />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/eel_fish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/eel_fish" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/anaconda" />

            <RadioButton
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/giant_oarfish" />
        </RadioGroup>

        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            style="@style/HeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Q2" />

        <TextView
            style="@style/QuestionStyle"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="@string/question2" />


        <RadioGroup
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/swan" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="8dp"
                android:text="@string/duck" />

            <RadioButton
                android:id="@+id/penguin"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/penguin" />
        </RadioGroup>

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            style="@style/HeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Q3" />

        <TextView
            style="@style/QuestionStyle"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="@string/question3" />

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/bassador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/bassador" />

            <CheckBox
                android:id="@+id/cockapoo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/cockapoo" />

            <CheckBox
                android:id="@+id/devon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/devon" />

        </LinearLayout>

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            style="@style/HeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Q4" />

        <TextView
            style="@style/QuestionStyle"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="@string/question4" />

        <RadioGroup
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/vienna"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/vienna" />

            <RadioButton
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/london" />

            <RadioButton
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/warsaw" />
        </RadioGroup>

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            style="@style/HeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Q5" />

        <TextView
            style="@style/QuestionStyle"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="@string/question5" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/whale"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/blue_whale" />

            <RadioButton
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/african_elephant" />

            <RadioButton
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/collosal_squid" />
        </RadioGroup>

        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            style="@style/HeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_6" />

        <TextView
            style="@style/QuestionStyle"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="@string/q6" />

        <EditText
            android:id="@+id/question6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/type_your_answer_here"
            android:inputType="textCapWords" />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/submitAnswersButton"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="#8BC34A"
            android:onClick="submitAnswers"
            android:text="@string/submit_answers" />

        <Button
            android:id="@+id/show_answers_button"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@color/lightPrimary"
            android:text="@string/show_correct_answers" />

        <TextView
            android:id="@+id/answers_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />


        <Button
            android:id="@+id/resetButton"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@color/lightPrimary"
            android:onClick="reset"
            android:text="@string/reset_and_start_again" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_your_answers_to_get_the_score"
            android:textSize="16sp" />


    </LinearLayout>


</ScrollView>